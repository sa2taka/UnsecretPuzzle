<% unless @message&.empty? %>
  <%= @message %>
<% end %>

<form action="/login" method="post" class="button-area">
  <span style="display:flex;justify-content: center;text-align: center;">
    <span style="margin: auto 1em">ユーザー名</span> 
    <div class="mdc-text-field mdc-text-field--outlined answer-input">
      <input name="name" class="mdc-text-field__input" id="text-field-hero-input">
      <div class="mdc-notched-outline">
        <div class="mdc-notched-outline__leading"></div>
        <div class="mdc-notched-outline__trailing"></div>
      </div>
    </div>
  </span>

  <span style="display:flex;justify-content: center;text-align: center;">
    <span style="margin: auto 1em">パスワード</span> 
    <div class="mdc-text-field mdc-text-field--outlined answer-input">
      <input name="password" type="password" class="mdc-text-field__input" id="text-field-hero-input">
      <div class="mdc-notched-outline">
        <div class="mdc-notched-outline__leading"></div>
        <div class="mdc-notched-outline__trailing"></div>
      </div>
    </div>
  </span>

  <input type="submit" class="mdc-button mdc-button--outlined" value="ログイン"/>
</form>
